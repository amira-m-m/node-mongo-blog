<div class="author">

    <h1 class="author__heading">Search Results</h1>

    <section class="articles">

        <ul class="article-ul">

            <% data.forEach(post => { %>
                <li><a href="/post/<%= post._id %>">
                    <span class="article-list__title"><%= post.title %></span>
                    <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
                </a></li>
            <% }) %>

            <% if (data.length === 0) { %>
                <p>No posts found matching your search term.</p>
            <% } %>
    
        </ul>

    </section>

</div>